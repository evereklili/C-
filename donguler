using System;

public class Algoritma
{
    int total = 0;
    static void Main()
    {
        int total = 0;
        int gradeCounter = 1;

        while(gradeCounter<=5)
        {
            Console.WriteLine("Enter Grade:");
            int grade = int.Parse(Console.ReadLine());
            total = total + grade;
            gradeCounter = gradeCounter + 1;
        }
        int average = total /(gradeCounter-1);
        Console.WriteLine($"\nTotal of all {gradeCounter-1} grade is {total}");
        Console.WriteLine($"Class average is {average}");
    }
}
